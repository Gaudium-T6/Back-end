{
  "swagger": "2.0",
  "info": {
    "description": "Gaudium is an App to share projects with Platzi master community, take feedback, qualify, and check projects from all Platzi Master members.",
    "version": "1.0.0",
    "title": "Gaudium Backend"
  },
  "host": "gaudiumapi.herokuapp.com/api",
  "basePath": "/",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/projects": {
      "get": {
        "tags": [
          "Projects"
        ],
        "summary": "retrieves all projects",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema" : {
              "type": "array",
              "items": {
                "$ref": "#/definitions/project"
              }
            }
          }
        }
      }
    },
    "/courses": {
      "get": {
        "tags": [
          "Courses"
        ],
        "summary": "retrieves all courses",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema" : {
              "type": "array",
              "items": {
                "$ref": "#/definitions/courses"
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "project": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "github_user": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "icon_url": {
          "type": "string"
        },
        "active": {
          "type": "boolean",
          "default": false
        },
        "production_url": {
          "type": "string",
          "nullable": true
        },
        "difficult_rating": {
          "type": "string",
          "options": ["basico", "intermedio", "avazando"]
        },
        "requirements": {
          "type": "string"
        },
        "type_id": {
          "type": "number"
        },
        "status_id": {
          "type": "number"
        }
      }
    },
    "courses": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
    "url": "http://swagger.io"
  }
}